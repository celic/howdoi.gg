		</div>
	</div>
</div>

<script type="text/javascript">

	$(function() {

		$('.see-more').on('click', function( event ) {

			event.preventDefault();

			$('.champions').toggleClass('full');

			if($('.champions').hasClass('full')) {
				$('.see-more').text('See Fewer');
			}else {
				$('.see-more').text('See More');
			}
		});
	});

</script>