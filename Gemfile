source 'https://rubygems.org'
ruby '2.1.2'

# Using Sinatra as the Ruby/HTTP server
gem 'sinatra'

# Using ActiveRecord for database interaction
gem 'activerecord'
gem 'sinatra-activerecord'

# Using postgres as the DBMS
gem 'pg'

# Using require all for easy local Sinatra requires
gem 'require_all'

# For some commenting assistance
gem 'annotate'

group :development do
	# Using shotgun for development friendly server testing
	gem 'shotgun'

	# Using tux to test code in my Sinatra environment
	gem 'tux'
end